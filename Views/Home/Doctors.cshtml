@model IEnumerable<umitHastanesiWeb.Models.Doctor>
@{

    ViewData["Title"] = "Doctors Page";
}

<div class="container">
    <ol class="breadcrumb bg-primary">
        <li class="breadcrumb-item">
            <a class="text-light" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
        </li>
        <li class="breadcrumb-item active text-light">Hekimlerimiz</li>
    </ol>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
            <div class="card h-100">
                <a href="#"><img class="card-img-top" src="@Url.Content(item.Image)" asp-append-version="true" alt=""></a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="#">@Html.DisplayFor(modelItem => item.Degree.Name) @Html.DisplayFor(modelItem => item.Name)</a>
                    </h4>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Department.Name)</p>
                </div>
            </div>
        </div>
    }
</div>